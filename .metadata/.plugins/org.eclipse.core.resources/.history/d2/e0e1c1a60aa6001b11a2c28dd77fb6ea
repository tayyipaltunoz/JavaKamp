package conditionals;

public class Main {

	public static void main(String[] args) {
		int sayi = 22;
		if (sayi < 20) {
			System.out.println("sayi 20'den küçüktür");
		} else if (sayi == 20) {
			System.out.println("sayi 20'ye eþittir");
		} else {
			System.out.println("sayi 20'den küçüktür");
		}
		
		int sayi1=10;
		int sayi2=20;
		int sayi3=30;
		int enbuyuk =sayi1;
		
		if (enbuyuk<sayi2) {
			enbuyuk=sayi2;
		}
		if (enbuyuk<sayi3) {
			enbuyuk=sayi3;
		}
		System.out.println("En büyük : " + enbuyuk);
	}

}
