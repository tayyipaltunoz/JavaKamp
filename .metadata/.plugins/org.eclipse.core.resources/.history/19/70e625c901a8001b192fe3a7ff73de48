package oppHomework;

public class Main {

	public static void main(String[] args) {

		Course course1 = new Course(1,"c# + angular","Engin Demiroð",30.5);
		Course course2 = new Course(2,"java + react","Engin Demiroð",40.5);
		Course course3 = new Course(3,"programlamaya giriþ","Engin Demiroð",90.5);
		
		Course[] courses = {course1,course2,course3};
		
		for (Course course : courses) {
			System.out.println(course.courseName);
		}
		
		Comment comment1 = new Comment(1,"Tayyip","ödev tamamlandý","ekran görüntüsü");
		Comment comment2 = new Comment(2,"Arda","githup.com/tayyipaltunoz","ekran görüntüsü");
		
		Comment[] comments= {comment1,comment2};
		
		for (Comment comment : comments) {
			System.out.println(comment.comment);
		}
		
		CourseManager courseManager = new CourseManager();
		courseManager.addCourse(course1);
		courseManager.addCourse(course2);
		courseManager.addCourse(course3);
		
		CommentManager commentManager = new CommentManager();
		commentManager.addComment(comment1,comment2);

	}

}
