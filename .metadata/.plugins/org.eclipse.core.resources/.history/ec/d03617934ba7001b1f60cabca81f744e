package oppIntro;

public class Main {

	public static void main(String[] args) {

		Product product1 = new Product(1,"Lenova V4",5000.00,"20gb");

		
		Product product2 = new Product();
		product2.id=2;
		product2.name="Lenova 515";
		product2.unitPrice=5900.90;
		product2.detail="20 gb ram";
		
		Product product3 = new Product();
		product3.id=3;
		product3.name="Lenova V4ultra";
		product3.unitPrice=9900.00;
		product3.detail="32 gb ram";
		
		Product[] products = {product1,product2,product3};
				
		System.out.println(products.length);
		
		for (Product product : products) {
			System.out.println(product.name);
		}
		
		Category category1 = new Category();
		category1.id=1;
		category1.name="Bilgisayar";
		
		Category category2 = new Category();
		category2.id=2;
		category2.name="Ev / Bahçe";
		
		Category[] categories = {category1,category2};
		
		for (Category category : categories) {
			System.out.println(category.name);
		}

	}

}
