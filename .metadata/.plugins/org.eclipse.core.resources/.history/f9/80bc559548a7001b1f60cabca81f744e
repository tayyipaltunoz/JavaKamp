package oppIntro;

public class Main {

	public static void main(String[] args) {

		Product product1 = new Product();
		product1.id=1;
		product1.name="Lenova V4";
		product1.unitPrice=5000.00;
		product1.detail="16 gb ram";
		
		Product product2 = new Product();
		product2.id=2;
		product2.name="Lenova 515";
		product2.unitPrice=5900.90;
		product2.detail="20 gb ram";
		
		Product product3 = new Product();
		product3.id=3;
		product3.name="Lenova V4ultra";
		product3.unitPrice=9900.00;
		product3.detail="32 gb ram";
		
		Product[] products = {product1,product2,product3};
				
		System.out.println(products.length);
		
		for (Product product : products) {
			System.out.println(product.name);
		}
		
		System.out.println(product1.name);

	}

}
